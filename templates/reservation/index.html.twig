{# templates/reservation/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
    <h1>Liste des réservations</h1>
    <a href="{{ path('reservation_new') }}" class="btn btn-primary">Créer une nouvelle réservation</a>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.nom }}</td>
                    <td>{{ reservation.prenom }}</td>
                    <td>{{ reservation.email }}</td>
                    <td>{{ reservation.telephone }}</td>
                    <td>
                        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('reservation_delete', {'id': reservation.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
